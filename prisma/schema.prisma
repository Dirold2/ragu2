generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Queue {
  id          Int      @id @default(autoincrement())
  channelId   String
  guildId     String   @unique @default("")
  priority    Boolean
  lastTrackId String?
  waveStatus  Boolean?
  volume      Int?
  
  tracks      Tracks[]
  
  @@unique([channelId, priority]) // Определяем составной уникальный ключ
}

model Tracks {
  id        Int    @id @default(autoincrement())
  trackId   String
  addedAt   BigInt
  info      String
  url       String
  source    String
  queueId   Int
  Queue     Queue   @relation(fields: [queueId], references: [id])
}