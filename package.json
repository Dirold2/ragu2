{
	"name": "ragu2",
	"version": "0.1.2.3",
	"private": false,
	"license": "MIT",
	"type": "module",
	"author": {
		"name": "dirold2",
		"email": "i@dirod2.ru"
	},
	"description": "RAGU2 is a music bot for Discord that allows users to play, pause, and manage music tracks in voice channels. The bot supports integration with Yandex Music and provides various commands for controlling playback.",
	"homepage": "https://github.com/dirold2/ragu2",
	"repository": {
		"type": "git",
		"url": "https://github.com/dirold2/ragu2.git"
	},
	"bugs": {
		"url": "https://github.com/dirold2/ragu2/issues"
	},
	"keywords": [
		"discord",
		"music",
		"bot",
		"yandex",
		"music"
	],
	"main": "build/main.js",
	"scripts": {
		"build": "tsc",
		"dev": "node --enable-source-maps --experimental-specifier-resolution=node --no-warnings --loader ts-node/esm/transpile-only src/main.ts",
		"start": "node --enable-source-maps --trace-warnings --experimental-specifier-resolution=node build/main.js",
		"lint": "eslint .",
		"lint:fix": "eslint . .ts --fix",
		"format": "prettier --write --use-tabs --tab-width 2 \"src/**/*.ts\"",
		"test": "echo \"No tests specified\" && exit 0",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:restart": "pm2 restart ragu2",
		"pm2:stop": "pm2 stop ragu2",
		"pm2:delete": "pm2 delete ragu2",
		"pm2:list": "pm2 list"
	},
	"dependencies": {
		"async-retry": "^1.3.3",
		"chalk": "^5.4.1",
		"date-fns": "^4.1.0",
		"dirname-filename-esm": "^1.1.2",
		"dotenv": "^16.4.7",
		"https-proxy-agent": "^7.0.6",
		"tslib": "^2.8.1",
		"typescript": "5.8.2",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.22.0",
		"@types/async-retry": "^1.4.9",
		"@types/node": "^22.13.10",
		"chokidar": "^4.0.3",
		"eslint": "^9.22.0",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"typescript-eslint": "^8.26.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=7.0.0"
	},
	"packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387",
	"workspaces": [
		"src/modules/*"
	]
}