{
	"name": "ragu2",
	"version": "0.1.0",
	"private": false,
	"license": "MIT",
	"type": "module",
	"author": {
		"name": "dirold2",
		"email": "i@dirod2.ru"
	},
	"description": "RAGU2 is a music bot for Discord that allows users to play, pause, and manage music tracks in voice channels. The bot supports integration with Yandex Music and provides various commands for controlling playback.",
	"homepage": "https://github.com/dirold2/ragu2",
	"repository": {
		"type": "git",
		"url": "https://github.com/dirold2/ragu2.git"
	},
	"bugs": {
		"url": "https://github.com/dirold2/ragu2/issues"
	},
	"keywords": [
		"discord",
		"music",
		"bot",
		"yandex",
		"music"
	],
	"main": "build/main.js",
	"scripts": {
		"build": "tsc",
		"dev": "pnpm prisma:generate && node --enable-source-maps --experimental-specifier-resolution=node --no-warnings --loader ts-node/esm/transpile-only src/dev.ts",
		"start": "node --enable-source-maps --trace-warnings --experimental-specifier-resolution=node build/main.js",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:studio": "prisma studio",
		"lint": "eslint .",
		"lint:fix": "eslint . .ts --fix",
		"format": "prettier --write --use-tabs --tab-width 2 \"src/**/*.ts\"",
		"test": "echo \"No tests specified\" && exit 0",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:restart": "pm2 restart ragu2",
		"pm2:stop": "pm2 stop ragu2",
		"pm2:delete": "pm2 delete ragu2",
		"pm2:list": "pm2 list"
	},
	"dependencies": {
		"@discordjs/voice": "^0.18.0",
		"@fastify/cors": "^10.0.2",
		"async-retry": "^1.3.3",
		"date-fns": "^4.1.0",
		"dirname-filename-esm": "^1.1.2",
		"dotenv": "^16.4.7",
		"fastify": "^5.2.1",
		"ffmpeg-ffprobe-static": "6.1.2-rc.1",
		"get-audio-duration": "^4.0.1",
		"https-proxy-agent": "^7.0.6",
		"node-cache": "^5.1.2",
		"opusscript": "^0.1.1",
		"prom-client": "^15.1.3",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"ym-api-meowed": "^1.3.5",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@discordx/importer": "^1.3.1",
		"@eslint/js": "^9.18.0",
		"@prisma/client": "^6.2.1",
		"@types/async-retry": "^1.4.9",
		"@types/node": "^22.10.10",
		"chokidar": "^4.0.3",
		"discord.js": "^14.17.3",
		"discordx": "^11.12.2",
		"eslint": "^9.18.0",
		"prettier": "^3.4.2",
		"prisma": "^6.2.1",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=7.0.0"
	},
	"packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387",
	"https-proxy-agent": "^7.0.2"
}
