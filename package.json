{
    "name": "ragu2",
    "version": "0.1.4.7",
    "description": "Discord bot module for RAGU2",
    "repository": {
        "type": "git",
        "url": "https://github.com/dirold2/ragu2.git"
    },
    "type": "module",
    "private": true,
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "node --enable-source-maps --experimental-specifier-resolution=node --no-warnings --loader ts-node/esm/transpile-only src/dev.ts",
        "start": "node --enable-source-maps --trace-warnings --experimental-specifier-resolution=node build/main.js",
        "lint": "eslint .",
        "lint:fix": "eslint . .ts --fix",
        "format": "prettier --write --use-tabs --tab-width 2 \"src/**/*.{ts,json}\"",
        "pm2:start": "pm2 start ecosystem.config.json",
        "pm2:restart": "pm2 restart ragu2",
        "pm2:stop": "pm2 stop ragu2",
        "pm2:delete": "pm2 delete ragu2",
        "pm2:list": "pm2 list"
    },
    "dependencies": {
        "@discordjs/voice": "^0.19.0",
        "@discordx/importer": "^1.3.3",
        "@dotenvx/dotenvx": "^1.49.0",
        "@snazzah/davey": "^0.1.6",
        "callsites": "^4.2.0",
        "discord.js": "^14.22.1",
        "discordx": "^11.12.6",
        "eventemitter2": "^6.4.9",
        "eventemitter3": "^5.0.1",
        "execa": "^9.6.0",
        "get-audio-duration": "^4.0.1",
        "lru-cache": "^11.2.1",
        "opusscript": "^0.1.1",
        "prom-client": "^15.1.3",
        "readable-stream": "^4.7.0",
        "undici": "^7.15.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "ym-api-meowed": "github:Dirold2/ym-api-meowed-d2#__dist__",
        "youtubei.js": "^15.0.1"
    },
    "devDependencies": {
        "@types/ms": "^2.1.0",
        "@types/node": "^24.3.1",
        "@types/readable-stream": "^4.0.21",
        "ansi-styles": "^6.2.1",
        "async-retry": "^1.3.3",
        "chokidar": "^4.0.3",
        "dayjs": "^1.11.18",
        "dirname-filename-esm": "^1.1.2",
        "ms": "^2.1.3",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "zod": "^4.1.5"
    },
    "imports": {
        "#*": "./src/*",
        "#utils": "./utils/*"
    }
}