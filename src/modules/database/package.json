{
  "name": "@ragu2/database",
  "version": "0.0.2",
  "description": "Database module for Prisma client management",
  "private": true,
  "type": "module",
  "prisma": {
    "schema": "./src/modules/database/prisma/schema.prisma"
  },
  "main": "build/modules/database/module.js",
  "types": "build/modules/database/module.d.ts",
  "imports": {
    "#prisma/*": "./.prisma/*"
  },
  "scripts": {		
    "prisma:generate": "prisma generate --schema=./src/modules/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "build": "cp -R .prisma build/modules/database/.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "prisma": "^6.5.0"
  }
}